<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Admin page</title>
</head>

<body>
    <header>
        <%- include ('../components/header.ejs') %>
    </header>

    <main class="container mt-3">
        <h3>Welcome to Admin panel</h3>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/admin">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/articles">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/categories">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/comments">Comments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">Users</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        <div class="">
            <form action="/admin/api/articles/<%= article._id %>/update" class="my-5" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">
                        <%= __("entertitle") %>:
                    </label>
                    <input type="text" value="" class="form-control" name="title" id="title">
                </div>
                <div class="form-group">
                    <label for="">
                        <%= __("coverimage") %>:
                    </label>
                    <input type="file" class="form-control" accept='image/*' name="cover" multiple>
                </div>
                <div class="form-group">
                    <label for="">
                        <%= __("attachments") %>:
                    </label>
                    <input type="file" class="form-control" accept='image/*' name="attachments" multiple>
                </div>
                <div class="form-group">
                    <label for="">
                        <%= __("content") %>
                    </label>
                    <textarea name="content" value="" class="form-control" id="content" cols="15" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <label for="">
                        <%= __("author") %>:
                    </label>
                    <select name="author" class="form-control" id="author">
                        <% authors.forEach(author=> { %>
                            <option value="<%= author._id%>">
                                <%= author.name %>
                                    <%= author.lastname %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">
                        <%= __("category") %>:
                    </label>
                    <select name="category" class="form-control" id="category">
                        <% categories.forEach(category=> { %>
                            <option value="<%= category._id %>">
                                <%= category.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <button class="btn btn-primary mt-3 w-100" data-article-id="<%= article._id %>"><%= __("update")%></button>
            </form>
        </div>
    </main>

    <footer>
        <%- include ('../components/footer.ejs') %>
    </footer>

    <%- include('../components/javascript.ejs') %>
</body>

</html>