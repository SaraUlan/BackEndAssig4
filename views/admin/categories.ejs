<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Admin page</title>
</head>

<body>
    <header>
        <%- include ('../components/header.ejs') %>
    </header>

    <main class="container mt-3">
        <h3>Welcome to Admin panel</h3>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/admin">
                                    <%= __("admin") %>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/articles">
                                    <%= __("articles") %>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/categories">
                                    <%= __("categories") %>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/comments">
                                    <%= __("comments") %>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/users">
                                    <%= __("users") %>
                                </a>
                            </li>
                        
                        </ul>

                    </ul>
                </div>
            </div>
        </nav>

        <ul class="article-list list-group">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategory"><%= __("addcategory")%></button>
            <% categories.forEach(category=> { %>
                <li class="article-item list-group-item d-flex flex-row justify-content-between align-items-center">
                    <div class="">
                        <a class="article-link" href="/admin/categories/<%= category._id %>">
                            <%= category.name %>
                        </a>

                    </div>
                    <button class="btn btn-danger btn-delete" data-item-id="<%= category._id %>">Delete</button>
                </li>
                <hr>
                <% }); %>
        </ul>
        <div class="modal fade" id="addCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><%= __("addcategory")%></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form class="" action="/admin/api/categories/add" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for=""><%= __("Icon") %></label>
                                <input type="file" class="form-control" name="icon" id="icon">
                            </div>
                            <div class="form-group">
                                <label for=""><%= __("addcategoryname") %></label>
                                <input type="text" name="name" class="form-control" id="name" value="">
                            </div>
                            <button type="submit" class="btn btn-primary w-100 mt-2"><%= __("addcategory")%></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <%- include ('../components/footer.ejs') %>
    </footer>

    <%- include('../components/javascript.ejs') %>
    <script type="text/javascript" src="/javascripts/admin/deletecategory.js"></script>
</body>

</html>